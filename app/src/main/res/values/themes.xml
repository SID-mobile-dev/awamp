<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Komaric" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.Komaric" parent="Base.Theme.Komaric" />

    <style name="Theme.Komaric.TextInput.OutLined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="boxStrokeColor">@color/text_input_default</item>
        <item name="suffixTextAppearance">@style/Theme.Komaric.Text14</item>
        <item name="suffixTextColor">@color/font</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <style name="Theme.Komaric.TextInput.Filled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/primary_light</item>
        <item name="suffixTextAppearance">@style/Theme.Komaric.Text14</item>
        <item name="suffixTextColor">@color/font</item>
        <item name="hintTextColor">@color/primary_with_alpha</item>
    </style>

    <style name="Theme.Komaric.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Theme.Komaric.Text12">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Theme.Komaric.Text14">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Theme.Komaric.Text18">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Theme.Komaric.Text" />

    <style name="Theme.Komaric.Text.Header24">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Theme.Komaric.Text.Header10">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Theme.Komaric.Text.Toolbar">
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

</resources>